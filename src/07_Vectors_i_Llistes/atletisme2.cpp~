
#include <vector>
#include <iostream>
#include <fstream>
using namespace std;

struct Dorsal {
  double ultim, anterior, millor;
  Dorsal(double crono) {
    ultim = millor = crono;
    anterior = 0.0:
  }

  void afegeix_crono(double crono);
};

void Dorsal::afegeix_crono(double crono) {
  anterior = ultim;
  ultim = crono;
  if (ultim - anterior < millor) {
    millor = ultim - anterior;
  }
}

int main() {
  vector<Dorsal> temps;
  int dorsal;
  double crono;

  ifstream fin("cursa.txt");
  fin >> dorsal >> crono;
  while (!fin.eof()) {
    temps[dorsal].;
    fin >> dorsal >> crono;
  }

}
